{% extends '_layout.twig' %}

{% set title = 'Blockbase - Application' %}
{% block head %}
    <style>
        html {
            width: 100%;
            height: 100%;
        }

        body {
            margin: 0;
            padding: 0;
            background: linear-gradient(#009fe3, #9198e5);
            background-size: cover;
        }

        div {
            width: 80%;
            margin: 10% auto;
            text-align: center;
        }

        div h1 {
            font-family: Arial, serif;
            color: white;
        }

        div img {
            width: 100%;
        }

        ul {
            padding: 0;
        }

        ul li {
            list-style: none;
            color: white;
            padding: 5px 0;
            background: rgba(255, 255, 255, 0.3);
            margin: 10px;
        }
    </style>

{% endblock %}
{% block content %}

    <div>
        <h1>Users list</h1>
        {% if users.length > 0 %}
        <ul>
            {% for user in users %}
                <li>{{ user.firstname | capitalize }} {{ user.lastname | capitalize }} - {{ user.email }}</li>
            {% endfor %}
            <ul>
                {% else %}
                    <p>There's no user in the database...</p>
                {% endif %}
    </div>
{% endblock %}