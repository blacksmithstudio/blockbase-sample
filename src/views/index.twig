{% extends '_layout.twig' %}

{% set title = 'Blockbase - Application' %}
{% block head %}
    <style>
        html {
            width: 100%;
            height: 100%;
        }

        body {
            margin: 0;
            padding: 0;
            background: linear-gradient(#009fe3, #9198e5);
            background-size: cover;
        }

        div {
            width: 40%;
            margin: 20% auto;
            text-align: center;
        }

        div h1 {
            font-family: Arial, serif;
            color: white;
        }

        div img {
            width: 100%;
        }
    </style>
{% endblock %}

{% block content %}
    <div>
        <img src="https://www.blockbase.run/fr/assets/img/blockbase.svg"/>
        <h1>"Back with another one of those block rockin' beats"</h1>
    </div>
{% endblock %}